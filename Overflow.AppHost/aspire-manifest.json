{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "keycloak-svc": {
      "type": "container.v0",
      "image": "quay.io/keycloak/keycloak:26.3",
      "args": [
        "start",
        "--import-realm"
      ],
      "volumes": [
        {
          "name": "keycloak-data",
          "target": "/opt/keycloak/data",
          "readOnly": false
        }
      ],
      "env": {
        "KC_BOOTSTRAP_ADMIN_USERNAME": "admin",
        "KC_BOOTSTRAP_ADMIN_PASSWORD": "{keycloak-svc-password.value}",
        "KC_HEALTH_ENABLED": "true"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 6001,
          "targetPort": 8080
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 9000
        }
      }
    },
    "postgres-svc": {
      "type": "container.v0",
      "connectionString": "Host={postgres-svc.bindings.tcp.host};Port={postgres-svc.bindings.tcp.port};Username=postgres;Password={postgres-svc-password.value}",
      "image": "docker.io/library/postgres:17.6",
      "volumes": [
        {
          "name": "postgres-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{postgres-svc-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 5431,
          "targetPort": 5432
        }
      }
    },
    "typesense-api-key": {
      "type": "parameter.v0",
      "value": "{typesense-api-key.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "typesense-svc": {
      "type": "container.v0",
      "image": "typesense/typesense:29.0",
      "args": [
        "--data-dir",
        "/data",
        "--api-key",
        "{typesense-api-key.value}",
        "--enable-cors"
      ],
      "volumes": [
        {
          "name": "typesense-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "bindings": {
        "typesense": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8108
        }
      }
    },
    "question-db": {
      "type": "value.v0",
      "connectionString": "{postgres-svc.connectionString};Database=question-db"
    },
    "question-svc": {
      "type": "project.v0",
      "path": "../QuestionService/QuestionService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{question-svc.bindings.http.targetPort}",
        "services__keycloak-svc__http__0": "{keycloak-svc.bindings.http.url}",
        "services__keycloak-svc__management__0": "{keycloak-svc.bindings.management.url}",
        "ConnectionStrings__question-db": "{question-db.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "search-svc": {
      "type": "project.v0",
      "path": "../SearchService/SearchService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{search-svc.bindings.http.targetPort}",
        "typesense-api-key": "{typesense-api-key.value}",
        "services__typesense-svc__typesense__0": "{typesense-svc.bindings.typesense.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "keycloak-svc-password": {
      "type": "parameter.v0",
      "value": "{keycloak-svc-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "postgres-svc-password": {
      "type": "parameter.v0",
      "value": "{postgres-svc-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    }
  }
}